#version 460
#extension GL_GOOGLE_include_directive : require

#include "cbt.glsl"

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(std430, set = 0, binding = 1) buffer dispatch_indirect_t
{
  uint cbtDispatchIndirectBuffer[];
};

void main()
{
  uint nodeCount = cbtNodeCount();
  cbtDispatchIndirectBuffer[0] = max(nodeCount >> 8, 1u);
}
